{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "allowJs": true, // Allow JS files to be compiled without TypeScript errors
    "skipLibCheck": true,  // Skip type checking of JS files
    "sourceMap": true, 
    "esModuleInterop": true, // Allow JS files to be compiled as ES modules (only in TypeScript)
    "allowSyntheticDefaultImports": true, // Allow default imports from JS files
    "strict": true,
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node", 
    "noImplicitAny": true,
    "resolveJsonModule": true, // Allow .json files to be resolved
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"], // Specify the path to the TypeScript root
    "paths": {
      "@/*": ["./src/*"],
      "@config": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@routes": ["./src/routes/*"],
      "@types": ["./src/types/*"],
      "@utils": ["./src/utils/*"],
    }
  },
  "ts-node": {
    "transpileOnly": true, // Only transpile TypeScript
    "files": true, // Watch for changes in TypeScript
    "require": ["tsconfig-paths/register"] // Require TypeScript config files to transpile them into JS 
  },
  "include": ["./src/**/*.ts", "./jest.config.ts"],
  "exclude": ["node_modules"] 
}