generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  password       String
  accessToken    String?
  refreshToken   String?
  confirmedemail Boolean?         @default(false)
  favoriteImages favoriteImages[]
}

model favoriteImages {
  id         Int     @id @default(autoincrement())
  user_email String? @db.VarChar(255)
  image_url  String  @db.VarChar(255)
  User       User?   @relation(fields: [user_email], references: [email], onDelete: NoAction, onUpdate: NoAction, map: "UserFavoriteImages")

  @@unique([user_email, image_url], map: "unique_favorite_image")
}
