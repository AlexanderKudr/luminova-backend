generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(uuid())
  email          String           @unique
  password       String
  accessToken    String?          @unique(map: "unique_user_accessToken")
  confirmedemail Boolean?         @default(false)
  refreshToken   String?
  name           String           @unique
  favoriteImages favoriteImages[]
}

model favoriteImages {
  id        Int     @id @default(autoincrement())
  public_id String
  user_id   String?
  User      User?   @relation(fields: [user_id], references: [id])
}

model collection_content {
  content_id Int    @id
  public_id  String
}

model collections {
  collection_id Int     @id
  title         String
  description   String?
  owner         String
}
